{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2020",
      "ES2019.Array"
    ],
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitUseStrict": true,
    "skipLibCheck": true,
    "target": "ES2019",
    "jsx": "react",
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}