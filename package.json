{
  "name": "@kontent-ai/gatsby-packages",
  "description": "Monorepo containing Kontent.ai packages for Gatsby.",
  "repository": "https://github.com/kontent-ai/gatsby-packages.git",
  "homepage": "https://github.com/kontent-ai/gatsby-packages#readme",
  "author": {
    "name": "Ond≈ôej Chrastina",
    "email": "chrastina.ondra@gmail.com",
    "url": "https://ondrej.chrastina.dev"
  },
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/gatsby-source",
    "packages/gatsby-components",
    "site",
    "examples/navigation",
    "examples/resolution",
    "examples/relationships",
    "examples/dsg-ssr"
  ],
  "scripts": {
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint --fix",
    "test": "yarn workspaces run test",
    "build": "yarn workspaces run build",
    "build:source": "yarn workspace @kontent-ai/gatsby-source build",
    "build:components": "yarn workspace @kontent-ai/gatsby-components build",
    "build:navigation": "yarn build:source && yarn workspace @kontent-ai/gatsby-example-navigation run build",
    "build:resolution": "yarn build:components && yarn build:source && yarn workspace @kontent-ai/gatsby-example-resolution run build",
    "build:relationships": "yarn build:source && yarn workspace @kontent-ai/gatsby-example-relationships run build",
    "build:dsg-ssr": "yarn build:source && yarn workspace @kontent-ai/gatsby-example-dsg-ssr run build",
    "build:site": "yarn build:source && yarn build:components && yarn workspace @kontent-ai/gatsby-starter-kontent-hello-world build",
    "watch": "run-p watch:**",
    "prepublishOnly": "yarn build",
    "develop:site": "yarn workspace @kontent-ai/gatsby-starter-kontent-hello-world develop",
    "develop:site:preview": "yarn workspace @kontent-ai/gatsby-starter-kontent-hello-world develop:preview",
    "develop:navigation": "yarn workspace @kontent-ai/gatsby-example-navigation develop",
    "develop:resolution": "yarn workspace @kontent-ai/gatsby-example-resolution develop",
    "develop:resolution:preview": "yarn workspace @kontent-ai/gatsby-example-resolution develop:preview",
    "develop:relationships": "yarn workspace @kontent-ai/gatsby-example-relationships develop",
    "develop:dsg-ssr": "yarn workspace @kontent-ai/gatsby-example-dsg-ssr develop",
    "develop:site:playground": "cross-env GATSBY_GRAPHQL_IDE=playground yarn develop:site",
    "watch:source": "yarn workspace @kontent-ai/gatsby-source watch",
    "watch:components": "yarn workspace @kontent-ai/gatsby-components watch",
    "test:source": "yarn workspace @kontent-ai/gatsby-source test",
    "test:components": "yarn workspace @kontent-ai/gatsby-components test",
    "set:version": "export LERNA_VERSION=\"$(node -e \"require('./lerna.json').version\")\""
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5"
  }
}
